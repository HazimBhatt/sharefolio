{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/Templates.jsx", "src/components/Layout/containers/SmallWrap.jsx", "src/components/Layout/Testimonial.jsx", "src/components/TestimonialsColumn.jsx", "src/app/(pages)/login/page.jsx", "src/app/(pages)/templates/TemplateCard.jsx", "src/app/(pages)/pricing/page.jsx", "src/app/api/update-user-plan/route.js", "src/app/api/verify-payment/route.js", "src/components/LayoutWrapper.jsx", "src/contexts/AuthContext.jsx"],
  "exclude": ["node_modules"]
}
